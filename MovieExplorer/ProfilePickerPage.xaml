<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.ProfilePickerPage"
             Title="ProfilePickerPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Theme" Clicked="Theme_Clicked"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Please choose a profile"
               FontSize="18"
               FontAttributes="Bold"/>

        <CollectionView x:Name="ProfilesView"
                        SelectionMode="Single"
                        SelectionChanged="ProfilesView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" Margin="0,4" >
                        
                        <Label Text="{Binding Name}" FontSize="16"/>
                    
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add New Profile" Clicked="AddProfile_Clicked"/>
        
    </VerticalStackLayout>
</ContentPage>